# OpenAI API Key for DALL-E image generation
OPENAI_API_KEY=your_openai_api_key_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Card Database Configuration
CARD_API_URL=https://db.ygoprodeck.com/api/v7
CARD_IMAGE_BASE_URL=https://storage.googleapis.com/yugioh-images

# Storage Configuration
STORAGE_PROVIDER=supabase # or 'b2' for Backblaze
B2_KEY_ID=your_b2_key_id_here
B2_APPLICATION_KEY=your_b2_application_key_here
B2_BUCKET_NAME=your_b2_bucket_name_here

# Application Settings
NODE_ENV=development
API_BASE_URL=http://localhost:3000
MAX_UPLOAD_SIZE=5242880 # 5MB in bytes
ENABLE_CARD_CACHING=true
CACHE_DURATION=3600 # 1 hour in seconds

# Feature Flags
ENABLE_DALLE=true
ENABLE_DECK_BUILDER=true
ENABLE_CARD_SHARING=true
ENABLE_USER_GALLERIES=true

# Rate Limiting
RATE_LIMIT_WINDOW=3600 # 1 hour in seconds
RATE_LIMIT_MAX_REQUESTS=100
